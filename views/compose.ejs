<%- include("partials/header") -%>


<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
      <label for="blog-title">Title</label>
      <input type="text" class="form-control" id="blog-title" name="postTitle" autocomplete="off" autofocus="on">
    </div>
    <div class="form-group">
      <label for="blog-text">Post</label>
      <textarea name="postBody" class="form-control" id="blog-text" rows="5" cols="30"></textarea>
    </div>
    <button name="button" type="submit" class="btn btn-primary">Publish</button>
</form>




<%- include("partials/footer") -%>



